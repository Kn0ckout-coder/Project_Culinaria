<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <link href="/styles/receitas.css" rel="stylesheet" type="text/css"> 
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= recipe.name %></title>
</head>
<body>
    <br>
        <h2><%= recipe.name %></h2>
    <main>
        <section>
            <img src="<%= recipe.image %>">
            <h3><%= recipe.name %></h3>
            <p><%= recipe.description %></p>
            <br>
                <div data-role="rating-container" data-image-id='<%= recipe.nameKey %>'>
                    <div data-role='rating' id="rating">
                    <span data-role='star' data-value="1">&#9733;</span> 
                    <span data-role='star' data-value="2">&#9733;</span>
                    <span data-role='star' data-value="3">&#9733;</span>
                    <span data-role='star' data-value="4">&#9733;</span>
                    <span data-role='star' data-value="5">&#9733;</span>
                    </div>
                </div>
                <br>
        <table>
            <tr>
                <th>Ingredientes para <%= recipe.name %></th>
            </tr>
            <tr>
                <td colspan="2">
                    <ul>
                        <% recipe.ingredients.split(',').forEach(ingrediente => { %>
                            <li><%= ingrediente %></li>
                        <% }); %>
                    </ul>
                </td>
            </tr>
        </table>
        <h2>Passos para fazer <%= recipe.name %></h2>
        <ol>
            <% recipe.steps.split('.').forEach(passo => { %>
                <li><%= passo %></li>
            <% }); %>
        </ol>
    </section>
    </main>
    <script src="/scripts/main.js" type="text/javascript"></script>
    <script src="/scripts/rating.js" type="text/javascript"></script>
</body>
</html>